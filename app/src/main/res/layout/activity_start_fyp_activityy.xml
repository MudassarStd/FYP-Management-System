<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.activities.StartFypActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvTitleStartActivity"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/custome_lower_corner_radius_gradient"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="Start Activity"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFypHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:hint="FYP Head " />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFypSecretory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:hint="FYP Secretory " />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFypActivityBatch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:hint="FYP Batch " />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnStartActivity"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/primaryColor"
                android:background="@drawable/rounded_corners_white_background"
                android:text="Start Activity"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/btnUpdateTeacher"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/primaryColor"
                android:background="@drawable/rounded_corners_white_background"
                android:text="Update"
                android:visibility="gone"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>