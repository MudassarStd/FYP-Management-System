<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Start_FYP_Activityy">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvTitleStartActivity"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingVertical="20dp"
                android:textStyle="bold"
                android:text="Start Activity"
                android:textAllCaps="true"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/custome_lower_corner_radius_gradient"
                />

            <EditText
                android:id="@+id/etFYPhead"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="52dp"
                android:hint="Add FYP Head"
                android:gravity="start|center"
                android:layout_marginHorizontal="20dp"
                android:focusedByDefault="false"
                android:paddingStart="20dp"
                android:elevation="2dp"
                android:background="@drawable/rounded_corners_white_background"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_color" />

            <EditText
                android:id="@+id/etFYPSec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:hint="Add FYP Secretory"
                android:gravity="start|center"
                android:focusedByDefault="false"
                android:paddingStart="20dp"
                android:elevation="2dp"
                android:background="@drawable/rounded_corners_white_background"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_color" />

            <EditText
                android:id="@+id/etStartYear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corners_white_background"
                android:hint="Add Year e.g (FA21)"
                android:layout_marginHorizontal="20dp"
                android:elevation="2dp"
                android:focusedByDefault="false"
                android:paddingStart="20dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_color" />

            <Button
                android:id="@+id/btnStartActivity"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/primaryColor"
                android:background="@drawable/rounded_corners_white_background"
                android:text="Add Teacher"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/btnUpdateTeacher"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/primaryColor"
                android:background="@drawable/rounded_corners_white_background"
                android:text="Update"
                android:visibility="gone"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>