<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corners_white_background"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Registration number on top -->
            <TextView
                android:id="@+id/tvGroupMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading.." />

            <!-- Name below -->
            <TextView
                android:id="@+id/tvGroupMemberRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading.." />
        </LinearLayout>

        <!-- "You" remains to the right -->
        <ImageView
            android:id="@+id/ivRemoveMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_min" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>