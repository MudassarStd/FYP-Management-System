<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".teacher.ui.notifications.NotificationsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/TV_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teachers/Share Ideas"
                android:textColor="#B6A9A9"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/titleHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:text="Share Fyp Ideas"
                android:textColor="@color/seaBlueColor"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TV_path"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-100dp"
                android:layout_marginBottom="30dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/edtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleHeading" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/rounded_corners_white_background"
                android:elevation="2dp"
                android:focusedByDefault="false"
                android:hint="Title"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/titleHeading"
                app:layout_constraintStart_toStartOf="@+id/titleHeading"
                app:layout_constraintTop_toBottomOf="@+id/titleHeading" />

            <EditText
                android:id="@+id/edtDescp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corners_white_background"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:hint="Description"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="10"
                android:gravity="top"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="@+id/edtTitle"
                app:layout_constraintStart_toStartOf="@+id/edtTitle"
                app:layout_constraintTop_toBottomOf="@+id/edtTitle" />

            <Button
                android:id="@+id/choosefile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/seaBlueColor"
                android:text="Choose File *"
                android:drawableLeft="@drawable/ic_attactment"
                android:textColor="@color/white"
                app:cornerRadius="5dp"
                app:layout_constraintStart_toStartOf="@+id/edtDescp"
                app:layout_constraintTop_toBottomOf="@+id/edtDescp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Optional"
                android:textStyle="italic"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/choosefile"
                app:layout_constraintStart_toEndOf="@+id/choosefile"
                app:layout_constraintTop_toTopOf="@+id/choosefile" />

            <Button
                android:id="@+id/publishbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/primaryColor"
                android:text="Publish idea"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:background="@drawable/rounded_corners_white_background"
                app:layout_constraintEnd_toEndOf="@+id/choosefile"
                app:layout_constraintStart_toStartOf="@+id/choosefile"
                app:layout_constraintTop_toBottomOf="@+id/choosefile" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>