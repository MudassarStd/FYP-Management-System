<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/TV_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teachers/Announcements"
        android:textColor="#B6A9A9"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        android:id="@+id/verticalScrool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/TV_mainheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Announcements"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/seaBlueColor"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TV_path"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_status"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First announcement"
                    android:textColor="@color/seaBlueColor"
                    android:layout_weight="2.5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:layout_weight="0.2"
                    />

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="18dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="0.01"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_heading" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-08-25   2:12 A.M"
                    android:layout_weight="0.2"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/group_description"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="2.5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_status"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second announcement"
                    android:textColor="@color/seaBlueColor"
                    android:layout_weight="2.5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:layout_weight="0.2"
                    />

                <View
                    android:id="@+id/view3"
                    android:layout_width="2dp"
                    android:layout_height="18dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="0.01"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_heading" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-08-25   2:12 A.M"
                    android:layout_weight="0.2"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/group_description"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="2.5"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>