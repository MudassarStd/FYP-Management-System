<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.activities.AddTeacher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:id="@+id/tvTitleAddTeachers"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingVertical="20dp"
                    android:textStyle="bold"
                    android:text="Add Teachers"
                    android:textAllCaps="true"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/custome_lower_corner_radius_gradient"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="54dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTeacherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray_color"
                        android:inputType="text"
                        android:hint="Name"/>


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTeacherEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray_color"
                        android:inputType="textEmailAddress"
                        android:hint="Email"/>


                </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTeacherDepart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray_color"
                        android:inputType="text"
                        android:hint="Department"/>


                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btnAddTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Add"
                    android:layout_marginHorizontal="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    app:cornerRadius="10dp"
                    />
                <Button
                    android:id="@+id/btnUpdateTeacher"
                    android:layout_width="200dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="40dp"
                    android:text="Update"
                    android:visibility="gone"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>