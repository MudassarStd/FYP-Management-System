    <style name="Theme.CUIFYPManagementSystem" parent="Base.Theme.CUIFYPManagementSystem" />

    <style name="Theme.CUIFYPManagementSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CUIFYPManagementSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CUIFYPManagementSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


