    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:navigationIcon">@drawable/ic_back_arrow</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
    </style>


    <style name="TeacherDashboardHeadersStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/seaBlueColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">@color/seaBlueColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TeacherDashboardTextViewBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/foursideradius</item>
        <item name="android:elevation">1dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">@color/seaBlueColor</item>

    </style>
